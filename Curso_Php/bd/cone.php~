

<?php

function novaConexao($banco = 'curso_php') {
  $servidor ='127.0.0.1:3306';
  $usuario = 'r';
    $senha = 'password';
  //$servidor = 'mysql:host=localhost';
    

    $conexao = new mysqli($servidor, $usuario, $senha, $banco);

    if($conexao->connect_error) {
        die('Erro: ' . $conexao->connect_error);
   
      }
   

    return $conexao;
}

